<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SB"
    android:background="@color/purple_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/getInputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:text="大煞笔啊哈哈哈哈"
        android:textColor="@color/red"
        android:textSize="70dp" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="237.6dp"
        android:scaleType="fitStart"
        android:src="@drawable/hz1" />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="237.6dp"
        android:layout_gravity="right"
        android:scaleType="fitEnd"
        android:src="@drawable/djt2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发出通知"
        android:layout_gravity="center|left"
        android:onClick="sendNotification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cancelNotification"
        android:layout_gravity="center|right"
        android:text="取消通知" />

    <ImageView
        android:layout_width="198dp"
        android:layout_height="149dp"
        android:layout_gravity="bottom"
        android:src="@drawable/djt1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="bottom"
        android:scaleType="fitEnd"
        android:src="@drawable/hz2"/>

</FrameLayout>