<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000ff"
        app:navigationIcon="@drawable/ic_baseline_arrow_forward_24"
        app:subtitle="---疾风剑豪 亚索"
        app:subtitleTextColor="@color/white"
        app:title="死亡如风-常伴吾身"
        app:titleTextColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="0.1"
        android:singleLine="true"
        android:text="---666---666---666---666---666---666---666---666"
        android:textColor="@color/red"
        android:textSize="26dp">

        <requestFocus />
    </TextView>

    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#FF00FF00"
        android:shadowDx="5.0"
        android:shadowDy="1.0"
        android:shadowRadius="5.0"
        android:text="打开百度"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="1in"
        android:layout_height="0.8in"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_favorite_24"
        android:gravity="center"
        android:shadowColor="@color/red"
        android:shadowDx="5.0"
        android:shadowDy="1.0"
        android:shadowRadius="5.0"
        android:text="音乐播放          芜湖"
        android:textColor="@color/teal_200"
        android:textColorLink="@color/btn_color_selector"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text11"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="3dp"
        android:gravity="left"
        android:hint="请输入用户名"
        android:inputType="phone"
        android:textColorHint="#95a1aa" />

    <EditText
        android:id="@+id/text22"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="3dp"
        android:gravity="left"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColorHint="#95a1aa" />

    <Button
        android:id="@+id/enter"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:shadowColor="@color/red"
        android:shadowRadius="4.0"
        android:text="登录"
        android:textColor="#ff00ffff"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/dl1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:shadowColor="@color/red"
        android:shadowRadius="4.0"
        android:text="音乐切换"
        android:textColor="#ff00ffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/con1"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:shadowColor="@color/red"
        android:shadowRadius="4.0"
        android:text="暂停播放"
        android:textColor="#ff00ffff"
        android:textSize="25dp" />

    <Button
        android:id="@+id/con2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:shadowColor="@color/red"
        android:shadowRadius="4.0"
        android:text="继续播放"
        android:textColor="#ff00ffff"
        android:textSize="25dp" />
</LinearLayout>
