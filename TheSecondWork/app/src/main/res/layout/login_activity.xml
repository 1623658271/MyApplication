<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/DengLu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="200dp"
        android:text="登录"
        android:shadowColor="@color/black"
        android:textStyle="bold"
        android:textColor="@color/littleBlue"
        android:textSize="40sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="你好鸭！欢迎来到掌上重邮~"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_inputLayout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入学号"
        app:helperText="重邮一卡通上的学号"
        app:helperTextTextColor="@color/littleBlue">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_username"
        android:background="@null"
        android:paddingTop="10dp"
        android:drawablePadding="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_inputLayout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入统一认证码后六位或者身份证后六位"
        app:helperTextTextColor="@color/littleBlue"
        app:helperText="统一认证码后六位/19级以前为身份证后六位">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/ic_user_password"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:drawablePadding="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ini_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="登录"
        android:textSize="30dp"
        android:background="@drawable/login_select"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/white" />



</LinearLayout>